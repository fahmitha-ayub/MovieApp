<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Add Movie"
        android:textStyle="bold"
        android:background="#DEF9C4"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchbut"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Search Movie"
        android:textStyle="bold"
        android:background="#9CDBA6"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewbut"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="View All movies"
        android:textStyle="bold"
        android:background="#50B498"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exitbut"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Exit"
        android:textStyle="bold"
        android:background="#468585"/>

</LinearLayout>